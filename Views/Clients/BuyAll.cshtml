


@{
    @model IEnumerable<POCHTI_KURSACH.Models.ProductsInBagViewModel>;
}

<b><h2><p>Общая стоимость - @ViewBag.ResultPrice р.</p></b></h2>


@foreach (var item in Model)
{
    <b><p>@item.Name - @item.Amount шт.</p></b>
}

<div class="form-group">
    <label class="control-label">Ваши пожелания</label>
    <input type="text" class="form-control" />
</div>

<form asp-action="ConfirmBuy" asp-controller="Clients">
    <div class="form-group">
        <label class="control-label">Адрес</label>
        <input type="text" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Заказать" class="btn btn-outline-dark" />
    </div>
</form>

